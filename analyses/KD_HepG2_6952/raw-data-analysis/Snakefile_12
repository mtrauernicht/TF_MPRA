include:
    '/DATA/usr/m.trauernicht/projects/SuRE-TF/gen-2_mES/raw-data-analysis/config.py'

# Rules -----------------------------------------------------------------------

rule all:
    input:
        expand('results_12/{ecn}_barcode_counts.tsv', ecn = ECN)


# Extract barcodes from cDNA/pDNA SE fastq files
rule extract_barcodes_from_fq:
    input:
        fq = ECN_DIR + S1
    output:
        tsv = 'results_12/{ecn}_barcodes.tsv'
    log:
        'logs/{ecn}_extract_barcodes_from_fq.log'
    conda:
        '/DATA/usr/m.trauernicht/projects/SuRE-TF/gen-2_mES/raw-data-analysis/environment.yaml'
    script:
        '/DATA/usr/m.trauernicht/projects/SuRE-TF/gen-2_mES/raw-data-analysis/mt20201117_bc-counts.py'

# Cluster cDNA/pDNA barcodes with Starcode

rule cluster_ecn_barcodes:
    input:
        starcode_in = 'results_12/{ecn}_barcodes.tsv'
    output:
        ofn = 'results_12/{ecn}_barcode_counts.tsv',
    log:
        'logs/{ecn}_cluster_ecn_barcodes.log'
    conda:
        '/DATA/usr/m.trauernicht/projects/SuRE-TF/gen-2_mES/raw-data-analysis/environment.yaml'
    threads: 12
    shell:
        'starcode --threads {threads} --print-clusters -i {input.starcode_in} --dist 1 | \
        sort -k1,1 > {output.ofn}'
